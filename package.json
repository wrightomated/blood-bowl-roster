{
    "name": "bbroster",
    "version": "3.0.0",
    "license": "GPL-3.0",
    "author": {
        "name": "James Wright",
        "email": "bbroster@gmail.com"
    },
    "engines": {
        "node": ">=16",
        "npm": ">=8"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wrightomated/blood-bowl-roster.git"
    },
    "scripts": {
        "build": "rollup -c",
        "dev": "PORT=5001 rollup -c -w",
        "dev:serve": "HOST=0.0.0.0 npm run dev",
        "start": "sirv public",
        "validate": "svelte-check",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
        "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
        "e2e": "cypress run",
        "e2e:local": "CYPRESS_BASE_URL=http://localhost:5001 cypress run"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.22.9",
        "@rollup/plugin-commonjs": "^25.0.3",
        "@rollup/plugin-json": "^6.0.1",
        "@rollup/plugin-node-resolve": "^15.1.0",
        "@rollup/plugin-replace": "^5.0.2",
        "@rollup/plugin-terser": "^0.4.3",
        "@rollup/plugin-typescript": "^11.1.2",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/svelte": "^4.0.3",
        "@tsconfig/svelte": "^5.0.0",
        "@types/jest": "^29.5.3",
        "@types/node": "^20.4.2",
        "babel-jest": "^29.6.1",
        "cypress": "^13.2.0",
        "dotenv": "^16.3.1",
        "jest": "^29.6.1",
        "rollup": "^3.26.2",
        "rollup-plugin-css-only": "^4.3.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-svelte": "^7.1.6",
        "sass": "^1.63.6",
        "svelte": "^4.2.19",
        "svelte-check": "^3.4.6",
        "svelte-jester": "^2.3.2",
        "svelte-preprocess": "^5.0.4",
        "ts-jest": "^29.1.1",
        "tslib": "^2.6.0",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "firebase": "^10.0.0",
        "nanoid": "^4.0.2",
        "sirv-cli": "^2.0.2",
        "svelte-i18n": "^4.0.0"
    },
    "jest": {
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "transform": {
            "^.+\\.svelte$": [
                "svelte-jester",
                {
                    "preprocess": true
                }
            ],
            "^.+\\.ts$": [
                "ts-jest",
                {
                    "useESM": true
                }
            ],
            "^.+\\.js$": "babel-jest"
        },
        "moduleFileExtensions": [
            "js",
            "ts",
            "svelte"
        ],
        "testPathIgnorePatterns": [
            "cypress",
            "__tests__/data"
        ]
    }
}
